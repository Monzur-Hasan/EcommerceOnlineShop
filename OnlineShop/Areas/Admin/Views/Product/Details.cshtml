@using OnlineShop.Models
@model Products

@{
    ViewData["Title"] = "Details";
}

<br />

<h2 class="text-info">Product Details</h2>

<form asp-action="Details" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">

        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>

                <div class="col-8">
                    <input asp-for="Name" readonly="readonly" class="form-control" />
                </div>

                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            @*<div class="form-group row">
                <div class="col-4">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Image" type="file" class="form-control" />
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>*@

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductColor" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-8">
                    @*@Html.DropDownListFor(c => c.ProductTypeId, new SelectList(ViewBag.productTypeId, "Id", "ProductType"), "--Select--", new { @class = "form-control" })*@
                    
                    <input asp-for="ProductTypes.ProductType" readonly="readonly" class="form-control" />
                </div>

                <span asp-validation-for="ProductTypes" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SpecialTagId"></label>
                </div>
                <div class="col-8">
                    @*@Html.DropDownListFor(c => c.SpecialTagId, new SelectList(ViewBag.tagId, "Id", "Name"), "--Select--", new { @class = "form-control" })*@

                    <input asp-for="SpecialTag.Name" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="SpecialTagId" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IsAvailable" readonly="readonly" type="checkbox" class="" />
                </div>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
        </div>

        <div class="col-1"></div>

        <div class="col-3">
            <img src="~/@Model.Image" width="100%" style="border-radius:5px; border:1px solid #efefef" />
        </div>

        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


